{
    "latex-workshop.latex.tools": [
    {
        "name": "ptex2pdf",
        "command": "ptex2pdf",
        "args": [
            "-interaction=nonstopmode",
            "-l",
            "-ot",
            "-kanji=utf8 -synctex=1",
            "%DOC%",
            // "./out/%DOCFILE%"
        ]
    },
    {
        "name": "pbibtex",
        "command": "pbibtex",
        "args": [
            "-kanji=utf8",
            "%DOCFILE%"
        ]
    },
    {
        "name": "clean up nonessential files", //余計なファイルはここから消す
        "command": "del",
        "args": [
            "%DOCFILE%.aux",
            "%DOCFILE%.bbl",
            "%DOCFILE%.blg",
            "%DOCFILE%.synctex.gz",
        ]
    },
],

"latex-workshop.latex.recipes": [
    {
        "name": "ptex2pdf -> pbibtex -> ptex2pdf*2",
        "tools": [
            "ptex2pdf",
            "pbibtex",
            "ptex2pdf",
            "ptex2pdf",
            "clean up nonessential files",
        ]
    }
],

"latex-workshop.latex.autoBuild.run": "onSave"

}
